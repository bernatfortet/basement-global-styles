{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "target": "es5",
    "module": "commonjs",
    "declaration": true,
    "sourceMap": true,
    "jsx": "react",
    "noImplicitAny": false,
    "outDir": "./dist",
    "lib": [ "dom", "es2015", "es2016", "es2017.object" ],
    "strict": false,
  },
  "include": ["src"], 
  "exclude": ["node_modules/**", "dist"]
}