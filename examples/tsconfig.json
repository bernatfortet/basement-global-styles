{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "build/dist",
    "module": "esnext",
    "target": "es5",
    "lib": ["es6", "dom"],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedParameters": false,
    "skipDefaultLibCheck": true,
    "noImplicitAny": true,
    "noUnusedLocals": false,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "paths": {
      "components/*": ["./components/*"],
      "config/*": ["./config/*"],
      "controllers/*": ["./controllers/*"],
      "images/*": ["./images/*"],
      "models/*": ["./models/*"],
      "pages/*": ["./pages/*"],
      "screens/*": ["./screens/*"],
      "services/*": ["./services/*"],
      "styles/*": ["./styles/*"],
      "utils/*": ["./utils/*"]
    }
  },
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts"
  ]
}